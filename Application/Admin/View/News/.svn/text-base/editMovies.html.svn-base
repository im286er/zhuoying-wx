            charset="UTF-8"></script>
    <script type="text/javascript">

        $(function () {

            $('.time').datetimepicker({
                format: 'yyyy-mm-dd hh:ii',
                language: "zh-CN",
                minView: 2,
                autoclose: true
            });
        })

    </script>
</block>