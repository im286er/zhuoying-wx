<extend name="Public/base" />

<block name="body">
	<!-- 标题栏 -->
	<div class="main-title">
		<h2>认证信息列表</h2>
	</div>

    <!-- 数据列表 -->
    <div class="data-table table-striped">
	<table class="">
    <thead>
        <tr>
		<th class="row-selected row-selected"><input class="check-all" type="checkbox"/></th>
		<th class="">id</th>
		<th class="">uid</th>		
		<th class="">sitename</th>	
		<th class="">address</th>			
		<th class="">uname</th>
		<th class="">idcard</th>
		<th class="">tel</th>		
		<th class="">img_up</th>
		<th class="">img_down</th>	
		<th class="">latitude</th>
		<th class="">longitude</th>	
		<th class="">legalname</th>
		<th class="">registration</th>
		<th class="">createtime</th>
		<th class="">status</th>																	
		<th class="">operate</th>
		</tr>
    </thead>
    <tbody>
		<notempty name="_list">
		<volist name="_list" id="vo">
		<tr>
            <td><input class="ids" type="checkbox" name="id[]" value="{$vo.uid}" /></td>
			<td>{$vo.id} </td> 
			<td>{$vo.uid} </td>			
			<td>{$vo.sitename} </td>			
			<td>{$vo.address} </td>			
			<td>{$vo.uname}</td>
			<td>{$vo.idcard}</td>
			<td>{$vo.tel}</td>
			<td><a href="{$vo.img_up}">id card up</a></td>
			<td><a href="{$vo.img_down}">id card down</a></td>
			<td>{$vo.latitude}</td>
			<td>{$vo.longitude}</td>
			<td>{$vo.legalname}</td>
			<td>{$vo.registration}</td>
			<td>{$vo.createtime}</td>
			<td>{$vo.status}</td>		
		</tr>
		</volist>
		<else/>
		<td colspan="9" class="text-center"> aOh! 暂时还没有内容! </td>
		</notempty>
	</tbody>
    </table>
	</div>
    <div class="page">
        {$_page}
    </div>
</block>

<block name="script">
	<script src="__STATIC__/thinkbox/jquery.thinkbox.js"></script>

	<script type="text/javascript">
	
    //导航高亮
    highlight_subnav('{:U('Operate/showhistory')}');
	</script>
</block>
